        "text-previous": "one step back",
        "text-next": "one step forward",
        "class-paging-control": "pagination pagination-lg"
      },
      "full": {
        "max-displayed-pages": 10,
        "gap-size": 3,
        "show-first-last": true,
        "show-prev-next": true,
        "show-page-size-nav": true,
