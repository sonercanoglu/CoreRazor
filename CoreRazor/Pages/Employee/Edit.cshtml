@page
@model CoreRazor.Pages.Employee.EditModel
@{
    ViewData["Title"] = "Employee - Edit";
}

<!-- Breadcrumb-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a asp-page="Index">Employees</a>
    </li>
    <li class="breadcrumb-item active">Edit</li>
</ol>

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Edit Employee</strong>
                        Form
                    </div>
                    <form method="post" class="form-horizontal">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="@Model.employee.Id" />
                            <div class="form-group row">
                                <label class="col-md-1 col-form-label" asp-for="@Model.employee.Name">Name</label>
                                <div class="col-md-2">
                                    <input type="text" asp-for="@Model.employee.Name" class="form-control" placeholder="Name">
                                    <span asp-validation-for="@Model.employee.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-1 col-form-label" asp-for="@Model.employee.Surname">Surname</label>
                                <div class="col-md-2">
                                    <input type="text" asp-for="@Model.employee.Surname" class="form-control" placeholder="Surname">
                                    <span asp-validation-for="@Model.employee.Surname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-1 col-form-label" asp-for="@Model.employee.BirthDate">Birth Date</label>
                                <div class="col-md-2">
                                    <input asp-for="@Model.employee.BirthDate" type="date" class="form-control">
                                    <span asp-validation-for="@Model.employee.BirthDate" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-1 col-form-label" asp-for="@Model.employee.GsmNo">Gsm No</label>
                                <div class="col-md-2">
                                    <input type="number" asp-for="@Model.employee.GsmNo" class="form-control" placeholder="Gsm No">
                                    <span asp-validation-for="@Model.employee.GsmNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-1 col-form-label" asp-for="@Model.employee.Email">Email</label>
                                <div class="col-md-2">
                                    <div class="input-group">
                                        <input type="email" asp-for="@Model.employee.Email" class="form-control" placeholder="Email">
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <span asp-validation-for="@Model.employee.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-warning">
                                <i class="fa fa-edit fa-lg"></i> Update
                            </button>
                            <a asp-page="Index" class="btn btn-danger">
                                <i class="fa fa-minus-square fa-lg"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!--/.col-->
        </div>
    </div>
</div>